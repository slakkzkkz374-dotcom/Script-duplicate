

local Players = game:GetService("Players")

local player = Players.LocalPlayer

local playerGui = player:WaitForChild("PlayerGui")

-- Cria a interface principal

local screenGui = Instance.new("ScreenGui")

screenGui.Name = "DuplicadorGUI"

screenGui.ResetOnSpawn = false

screenGui.Parent = playerGui

-- Frame principal (hub)

local mainFrame = Instance.new("Frame")

mainFrame.Size = UDim2.new(0, 220, 0, 110)

mainFrame.Position = UDim2.new(0.5, -110, 0.75, 0)

mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

mainFrame.BorderSizePixel = 0

mainFrame.Active = true

mainFrame.Draggable = true

mainFrame.Parent = screenGui

-- T√≠tulo

local title = Instance.new("TextLabel")

title.Size = UDim2.new(1, 0, 0, 30)

title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

title.Text = "‚öôÔ∏è Hub Duplicador"

title.Font = Enum.Font.GothamBold

title.TextColor3 = Color3.fromRGB(255, 255, 255)

title.TextSize = 16

title.Parent = mainFrame

-- Bot√£o principal

local botao = Instance.new("TextButton")

botao.Size = UDim2.new(1, -20, 0, 40)

botao.Position = UDim2.new(0, 10, 0, 40)

botao.BackgroundColor3 = Color3.fromRGB(60, 60, 200)

botao.TextColor3 = Color3.fromRGB(255, 255, 255)

botao.Text = "üîÅ Duplicar Item"

botao.Font = Enum.Font.GothamBold

botao.TextSize = 18

botao.Parent = mainFrame

botao.AutoButtonColor = true

-- Marca "Feito por Black"

local marca = Instance.new("TextLabel")

marca.Size = UDim2.new(1, 0, 0, 20)

marca.Position = UDim2.new(0, 0, 1, -20)

marca.BackgroundTransparency = 1

marca.Text = "Feito por Black"

marca.Font = Enum.Font.GothamBold

marca.TextColor3 = Color3.fromRGB(0, 170, 255)

marca.TextSize = 12

marca.Parent = mainFrame

-- Anima√ß√£o de cor da marca (azul ‚Üí roxo ‚Üí azul)

task.spawn(function()

	while true do		for i = 0, 1, 0.02 do

			local r = 0 + (170 - 0) * i

			local g = 170 - (170 * i)

			local b = 255

			marca.TextColor3 = Color3.fromRGB(r, g, b)

			task.wait(0.05)

		end

		for i = 0, 1, 0.02 do

			local r = 170 - (170 * i)

			local g = 0 + (170 * i)

			local b = 255 - (85 * i)

			marca.TextColor3 = Color3.fromRGB(r, g, b)

			task.wait(0.05)

		end

	end

end)

-- Tela de carregamento

local loadingFrame = Instance.new("Frame")

loadingFrame.Size = UDim2.new(1, 0, 1, 0)

loadingFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

loadingFrame.BackgroundTransparency = 0.2

loadingFrame.Visible = false

loadingFrame.Parent = screenGui

-- Texto "Duplicando..."

local loadingText = Instance.new("TextLabel")

loadingText.AnchorPoint = Vector2.new(0.5, 0.5)

loadingText.Position = UDim2.new(0.5, 0, 0.4, 0)

loadingText.Size = UDim2.new(0, 300, 0, 50)

loadingText.Text = "Duplicando..."

loadingText.Font = Enum.Font.GothamBold

loadingText.TextColor3 = Color3.new(1, 1, 1)

loadingText.TextSize = 30

loadingText.BackgroundTransparency = 1

loadingText.Parent = loadingFrame

-- Barra de progresso (fundo)

local progressBarBG = Instance.new("Frame")

progressBarBG.AnchorPoint = Vector2.new(0.5, 0.5)

progressBarBG.Position = UDim2.new(0.5, 0, 0.6, 0)

progressBarBG.Size = UDim2.new(0, 300, 0, 25)

progressBarBG.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

progressBarBG.BorderSizePixel = 0

progressBarBG.Parent = loadingFrame

-- Barra de progresso (preenchimento)

local progressBar = Instance.new("Frame")

progressBar.Size = UDim2.new(0, 0, 1, 0)

progressBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)

progressBar.BorderSizePixel = 0

progressBar.Parent = progressBarBG

-- Fun√ß√£o de duplicar item com anima√ß√£o

local function duplicarItem()

	local character = player.Character or player.CharacterAdded:Wait()

	local backpack = player:WaitForChild("Backpack")

	local ferramenta = character:FindFirstChildOfClass("Tool") or backpack:FindFirstChildOfClass("Tool")

	if not ferramenta then

		warn("Nenhum item na m√£o para duplicar!")

		return

	end

	-- Mostra tela de carregamento

	loadingFrame.Visible = true

	progressBar.Size = UDim2.new(0, 0, 1, 0)

	loadingText.Text = "Duplicando..."

	-- Anima a barra de progresso

	for i = 1, 100 do

		progressBar.Size = UDim2.new(i / 100, 0, 1, 0)

		task.wait(0.02)

	end

	-- Duplica o item

	local clone = ferramenta:Clone()

	clone.Parent = backpack

	-- Conclui

	loadingText.Text = "‚úÖ Duplica√ß√£o Conclu√≠da!"

	task.wait(1)

	loadingFrame.Visible = false

end

botao.MouseButton1Click:Connect(duplicarItem)
